<!--components/pay/pay.wxml-->
<cu-custom bgColor="bg-gradual-pink">
  <view slot="content">收款二维码</view>
</cu-custom>
<view class="~cu-card ~case {{isCard?'~no-card':''}}">
  <view class="~cu-item ~shadow">
    <view class="~image">
      <image src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg" mode="widthFix"></image>
      <view class="~cu-tag ~bg-gradual-green">微信</view>
      <view class="~cu-bar ~bg-shadeBottom">
        <text class="~text-cut"></text>
      </view>
    </view>
    <view class="~cu-list ~menu-avatar">
      <view class="~cu-item">
        <view class="~cu-avatar ~round ~lg" style="background-image:url('/resources/images/logo.png');"></view>
        <view class="~content ~flex-sub">
          <view class="~text-grey">微信 二维码</view>
          <view class="~text-gray ~text-sm ~flex ~justify-between">
          </view>
        </view>
      </view>
    </view>
  </view>

  <view class="~cu-item ~shadow">
    <view class="~image">
      <image src="https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg" mode="widthFix"></image>
      <view class="~cu-tag ~bg-gradual-green">支付宝</view>
      <view class="~cu-bar ~bg-shadeBottom">
        <text class="~text-cut"></text>
      </view>
    </view>
    <view class="~cu-list ~menu-avatar">
      <view class="~cu-item">
        <view class="~cu-avatar ~round ~lg" style="background-image:url('/resources/images/logo.png');"></view>
        <view class="~content ~flex-sub">
          <view class="~text-grey">支付宝 二维码</view>
          <view class="~text-gray ~text-sm ~flex ~justify-between">
          </view>
        </view>
      </view>
    </view>
  </view>
</view>